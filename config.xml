<?xml version='1.0' encoding='utf-8'?>
<widget id="net.frajonico.candelaria" 
        version="6.7.22" 
        versionCode="11"
        xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Candelaria</name>
    <description>
        Aplicaci√≥n para Jesus de Candelaria
    </description>
    <author email="fnievesc@gmail.com" href="http://frajonico.net">
        Francisco Nieves
    </author>
    <!-- feature name="http://api.phonegap.com/1.0/camera"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/media"/>
    <feature name="http://api.phonegap.com/1.0/network"/>
    <feature name="http://api.phonegap.com/1.0/notification"/ -->

    <gap:plugin name="org.apache.cordova.camera" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.network" />
    <gap:plugin name="org.apache.cordova.dialogs" />


    <gap:platform name="ios" />
    <gap:platform name="android" />
    
    <!-- preference name="phonegap-version" value="2.9.0" / -->
    <preference name="orientation" value="portrait" />
    <preference name="fullscreen" value="false" />
    <!-- ios -->
    <preference name="prerendered-icon" value="true" />
    <preference name="target-device" value="handset" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    
    <!-- android -->
    <preference name="android-installLocation" value="auto" />    
    <preference name="android-minSdkVersion" value="7" />

    <icon src="icon.png"/>

    <icon src="res/ios/icons/icon57.png" gap:platform="ios" width="57" height="57" /> <!-- iPhone & iPod Touch non retina iOS6 -->
    <icon src="res/ios/icons/icon72.png" gap:platform="ios" width="72" height="72" /> <!-- iPad non retina iOS6 -->
    <icon src="res/ios/icons/icon76.png" gap:platform="ios" width="76" height="76" /> <!-- iPad non retina iOS7 -->
    <icon src="res/ios/icons/icon114.png" gap:platform="ios" width="114" height="114" /> <!-- iPhone & iPod Touch retina iOS6 -->
    <icon src="res/ios/icons/icon120.png" gap:platform="ios" width="120" height="120" /> <!-- iPhone & iPod Touch retina iOS7 -->
    <icon src="res/ios/icons/icon144.png" gap:platform="ios" width="144" height="144" /> <!-- iPad retina iOS6 -->
    <icon src="res/ios/icons/icon152.png" gap:platform="ios" width="152" height="152" /> <!-- iPad retina iOS7 -->    
    
    <icon src="res/android/icons/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/android/icons/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/android/icons/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/android/icons/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

    <gap:splash src="res/ios/splash/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/ios/splash/Default_at_2x.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="res/ios/splash/Default_iphone5.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="res/ios/splash/Default-Landscape.png" gap:platform="ios" width="1024" height="748" />
    <gap:splash src="res/ios/splash/Default-Portrait.png" gap:platform="ios" width="768" height="1004" />

    <gap:splash src="res/android/splash/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/android/splash/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/android/splash/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/android/splash/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

    <access origin="http://127.0.0.1*" />
    <access origin="http://216.120.237.30*" />
    <access origin="https://216.120.237.30*" />
    <access origin="https://googleapis.com" subdomains="true" />
    <access origin="https://maps.gstatic.com" />
    <content src="index.html" />	
</widget>
